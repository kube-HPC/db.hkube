{
    "name": "@hkube/db",
    "version": "1.0.11",
    "description": "db api for HKube",
    "main": "index.js",
    "scripts": {
        "lint": "eslint .",
        "format": "prettier --write .",
        "pretest": "npm run lint",
        "start:compose": "docker-compose up -d && sleep 5 && ./scripts/startReplicas.sh",
        "test": "NODE_ENV=test ./node_modules/mocha/bin/_mocha tests --colors --recursive --exit",
        "test:cov": "NODE_ENV=test ./node_modules/nyc/bin/nyc.js --reporter=html --reporter=text --reporter=lcov npm run test",
        "coverage": "cat ./coverage/lcov.info | ./node_modules/coveralls/bin/coveralls.js",
        "build": "npm publish"
    },
    "author": "Reggev Amsalem",
    "license": "ISC",
    "dependencies": {
        "mongodb": "^3.6.3"
    },
    "devDependencies": {
        "@types/chai-as-promised": "^7.1.3",
        "@types/mongodb": "^3.5.34",
        "chai": "^4.2.0",
        "chai-as-promised": "^7.1.1",
        "coveralls": "^3.1.0",
        "dotenv": "^8.2.0",
        "eslint": "^7.14.0",
        "eslint-config-airbnb": "^18.2.1",
        "eslint-config-airbnb-base": "^14.2.1",
        "eslint-config-prettier": "^6.15.0",
        "eslint-plugin-chai-friendly": "^0.6.0",
        "eslint-plugin-import": "^2.22.1",
        "eslint-plugin-jsdoc": "^30.7.8",
        "eslint-plugin-prettier": "^3.1.4",
        "mocha": "^6.2.0",
        "nyc": "^15.1.0",
        "prettier": "^2.2.0",
        "prettier-plugin-jsdoc": "^0.2.4",
        "uuid": "^8.3.1"
    }
}
